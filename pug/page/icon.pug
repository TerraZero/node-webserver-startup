extends /base/_page

block append css
  link(href='/src/css/icon.css', rel='stylesheet')

mixin icon(index)
  case index
    when 0
      svg(viewBox="0 0 100 100")
        circle.st-m.fi-n(cx="50", cy="50", r="49")
        path.st-m.z.ro-y(d="M 35, 40 l 26, 0 l -22, 30 l 26, 0")
        path.st-m.t(d="M 30, 30 l 40, 0 M 50, 30 l 0, 50")
        g.ro-x
          path.fi-m.st-m(d="M 50, 5 a 45, 45, 0, 0, 1, 45, 45z")
          path.fi-m.st-m(d="M 50, 95 a 45, 45, 0, 0, 1, -45, -45z")
    when 1
      svg(viewBox="0 0 100 100")
        circle.st-m.fi-n(cx="50", cy="50", r="49")
        path.st-m.z.ro-y(d="M 35, 40 l 26, 0 l -22, 30 l 26, 0")
        path.st-m.t(d="M 30, 30 l 40, 0 M 50, 30 l 0, 50")
        g.ro-x
          path.fi-m.st-m(d="M 5, 50 a 45, 45, 0, 0, 1, 45, -45z")
          path.fi-m.st-m(d="M 95, 50 a 45, 45, 0, 0, 1, -45, 45z")
    when 2
      svg(viewBox="0 0 100 100")
        circle.st-m.fi-n(cx="50", cy="50", r="49")
        path.st-m.z.ro-y(d="M 35, 40 l 26, 0 l -22, 30 l 26, 0")
        path.st-m.t(d="M 30, 30 l 40, 0 M 50, 30 l 0, 50")
        g.ro-x
          path.fi-m.st-m(d="M 53, 2 a 50, 50, 0, 0, 1, 45, 45z")
          path.fi-m.st-m(d="M 47, 98 a 50, 50, 0, 0, 1, -45, -45z")
    when 3
      svg(viewBox="0 0 100 100")
        path.st-m.z.ro-y(d="M 35, 40 l 26, 0 l -22, 30 l 26, 0")
        path.st-m.t(d="M 30, 30 l 40, 0 M 50, 30 l 0, 50")
        g.ro-x
          path.fi-m.st-m(d="M 53, 2 a 50, 50, 0, 0, 1, 45, 45z")
          path.fi-m.st-m(d="M 47, 98 a 50, 50, 0, 0, 1, -45, -45z")

block page
  - var c = 0;

  .wrapper
    while (c < 4)
      .row(class='row-' + c)
        - var cols = ['icon', 'ani', 'ani-all', 'neg'];
        for col in cols
          .col(class='col-' + col)
            +icon(c)
        - c++
