extends /base/_page

block append js
  script(src='/src/js/vue.js')

block append js-lib
  script(src='/src/lib/js/vue.js')

block append css
  link(href='/src/css/screen.css', rel='stylesheet')
  link(href='/src/css/page/vue.css', rel='stylesheet')

block page
  - var nids = [1, 2, 3, 1, 3];
  - var c = 0;

  .wrapper
    each nid in nids
      - c++;
      .entity.node(class='nid-' + nid + ' count-' + c, data-nid=nid, data-count=c, v-bind:class='classes')
        .field-wrapper
          h2.field-title
            | {{ title }}{{ state }}
          .field-name
            | {{ name }}
        a.field-nid(href='#')
          | {{ nid }}